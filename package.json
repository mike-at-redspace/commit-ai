{
  "name": "commit-ai",
  "version": "1.1.0",
  "description": "AI-powered commit message generator using GitHub Copilot",
  "type": "module",
  "bin": {
    "commit-ai": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "pnpm run build"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "conventional-commits",
    "cli",
    "copilot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@github/copilot-sdk": "^0.1.19",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^25.0.0",
    "@types/react": "^18.3.0",
    "eslint": "^9.15.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.0",
    "tsc-alias": "^1.8.10",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=25.0.0"
  }
}
